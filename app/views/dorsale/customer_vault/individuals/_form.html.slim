= horizontal_form_for @individual, as: :individual do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :tag_list, collection: @tags, input_html: {multiple: true}
  = f.input :phone
  = f.input :mobile
  = f.input :email, as: :string
  = f.input :www, as: :string
  = f.input :fax
  = f.input :twitter
  = f.input :skype
  = f.input :title
  = f.input :context, as: :text
  = f.input :short_name

  / Temporaire - A refactoriser
  = f.simple_fields_for :address do |af|
    = af.input :street
    = af.input :street_bis
    = af.input :zip
    = af.input :city
    = af.input :country, as: :string

  = form_buttons
